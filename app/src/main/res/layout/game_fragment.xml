<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/game_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ImageView
        android:id="@+id/iv_canvas1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_canvas2"
        android:layout_toRightOf="@+id/iv_canvas1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_canvas3"
        android:layout_toRightOf="@+id/iv_canvas2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_canvas4"
        android:layout_toRightOf="@+id/iv_canvas3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Score"
        android:textSize="50sp"
        android:forceHasOverlappingRendering="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="start"
        android:id="@+id/btnStart">
    </Button>
</RelativeLayout>